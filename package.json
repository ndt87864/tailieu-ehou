{
  "name": "tailieu",
  "version": "1.0.1",
  "description": "A clone of the tailieuneu.com website using React and Tailwind CSS.",
  "main": "src/main.jsx",
  "scripts": {
    "dev": "vite",
    "dev:api": "node src/test-server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "node scripts/clear-cache.js && node scripts/build-extension.js --production && node scripts/generate-static-api.js && vite build",
    "build:force": "node scripts/clear-cache.js && node scripts/build-extension.js --production && node scripts/generate-static-api.js && vite build",
    "preview": "vite preview",
    "seed-data": "vite-node src/utils/seedData.js",
    "generate:api": "node scripts/generate-static-api.js",
    "deploy": "npm run build && firebase deploy --only hosting --force",
    "deploy:full": "npm run build:force && firebase deploy --only hosting --force",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "npm run build:force && firebase deploy --only hosting:tailieu-89ca9 --force && firebase deploy --only hosting:tailieuehou --force",
    "deploy:custom": "node scripts/deploy-custom.js",
    "deploy:fixed": "node scripts/deploy-fixed.js",
    "deploy:simple": "node scripts/simple-deploy.js",
    "setup:firebase": "node scripts/setup-firebase.js",
    "clear:firebase": "firebase hosting:clearCache || echo 'Bỏ qua xóa cache'",
    "clear:dist": "rimraf dist",
    "firebase:create-site": "firebase hosting:sites:create",
    "firebase:list-sites": "firebase hosting:sites:list",
    "firebase:setup-targets": "firebase target:apply hosting tailieu-89ca9 tailieu-89ca9 && firebase target:apply hosting tailieuehou tailieuehou",
    "fix:deps": "node scripts/fix-dependencies.js",
    "fix:firebase": "node scripts/fix-firebase-imports-correct.js",
    "fix:query-params": "node scripts/clean-query-params.js",
    "fix:vite-config": "node scripts/update-vite-config.js",
    "fix:contexts": "node scripts/check-context-imports.js",
    "fix:firebase-file": "node scripts/fix-firebase-file.js",
    "fix:query-redirection": "node scripts/fix-query-redirection.js",
    "fix:html-parsing": "node scripts/fix-html-parsing.js",
    "fix:auth-context": "node scripts/fix-auth-context.js",
    "validate:js": "node scripts/validate-js-files.js",
    "build:safe": "node scripts/validate-js-files.js && npm run build"
  },
  "keywords": [
    "react",
    "tailwindcss",
    "clone",
    "website"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.9",
    "date-fns": "^4.1.0",
    "docx": "^9.5.1",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "firebase": "^9.22.0",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "mime-types": "^3.0.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-router-dom": "^6.22.0",
    "react-toastify": "^11.0.5",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.2",
    "concurrently": "^8.2.2",
    "firebase-admin": "^13.5.0",
    "javascript-obfuscator": "^4.1.1",
    "postcss": "^8.4.5",
    "rimraf": "^5.0.10",
    "tailwindcss": "^2.2.19",
    "vite": "^5.0.12",
    "vite-node": "^1.2.1"
  }
}
