rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ==================== CATEGORIES ====================
    // Công khai, ai cũng đọc được
    match /categories/{categoryId} {
      allow read: if true;  // Public read
      allow write: if isAdmin();  // Chỉ admin mới sửa/xóa
    }
    
    // ==================== DOCUMENTS ====================
    // Công khai, ai cũng đọc được
    match /documents/{documentId} {
      allow read: if true;  // Public read
      allow write: if isAdmin();  // Chỉ admin mới sửa/xóa
    }
    
    // ==================== QUESTIONS ====================
    // Công khai NHƯNG giới hạn số lượng query
    match /questions/{questionId} {
      // Cho phép đọc nhưng PHẢI có điều kiện where
      allow read: if true;
      allow write: if isAdmin();
      
      // Giới hạn: Mỗi lần query tối đa 1000 questions
      // (Firestore tự động enforce limit này qua query)
    }
    
    // ==================== USERS ====================
    match /users/{userId} {
      // User chỉ đọc được data của chính mình
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
      
      // Admin đọc được tất cả
      allow read, write: if isAdmin();
    }
    
    // ==================== USER PREFERENCES ====================
    match /userPreferences/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }
    
    // ==================== APP SETTINGS ====================
    match /app_settings/{settingId} {
      allow read: if true;  // Public read for app settings
      allow write: if isAdmin();  // Only admin can modify
    }
    
    // ==================== CALENDAR NOTES ====================
    match /calendar_notes/{noteId} {
      allow read: if isSignedIn();  // Authenticated users can read
      allow write: if isAdmin();  // Only admin can create/modify/delete
    }
    
    // ==================== PREMIUM TIERS ====================
    match /premium_tiers/{tierId} {
      allow read: if true;  // Public read for premium tier information
      allow write: if isAdmin();  // Only admin can modify
    }
    
    // ==================== FOOTER CONTENT ====================
    match /footer_content/{footerId} {
      allow read: if true;  // Public read for footer content
      allow write: if isAdmin();  // Only admin can modify
    }
    
    // ==================== CONTENT ====================
    match /content/{contentId} {
      allow read: if true;  // Public read for content
      allow write: if isAdmin();  // Only admin can create/modify/delete
    }
    
    // ==================== SETTINGS ====================
    match /settings/{settingId} {
      allow read: if true;  // Public read for settings
      allow write: if isAdmin();  // Only admin can modify
    }
    
    // ==================== PRICING CONTENT ====================
    match /pricing_content/{contentId} {
      allow read: if true;  // Public read for pricing content
      allow write: if isAdmin();  // Only admin can modify
    }
  }
}
